---
// BrandLogo en PNG (en lugar de SVG).
// Props:
// - alt?: string — accesibilidad (aria-label)
// - class?: string — clases para tamaño (aplicadas al contenedor)
// - src?: string | ImageMetadata — ruta del PNG o metadata; por defecto usa @images/icon.png
import fallbackLogo from "@images/titigologo-4.png";
import type { ImageMetadata } from "astro";
const {
  alt = "TitiGo Logo",
  class: className = "h-8 w-auto",
  src,
} = Astro.props as {
  alt?: string;
  class?: string;
  src?: string | ImageMetadata;
};
const resolvedSrc: string = typeof src === "string"
  ? src
  : src?.src ?? (typeof fallbackLogo === "string" ? fallbackLogo : (fallbackLogo as ImageMetadata).src);
---
<style>
  /* Ajustes básicos del contenedor e imagen */
  .img-fit { display: block; height: auto; width: 100%; }
  .inline-fit { display: inline-block; }
  .brand-logo { line-height: 0; }
  @media (prefers-reduced-motion: reduce) { .brand-logo * { transition: none !important; } }
</style>
<span class={`brand-logo inline-fit ${className}`} role="img" aria-label={alt}>
  <img
    class="img-fit"
    src={resolvedSrc}
    alt={alt}
    loading="lazy"
    decoding="async"
  />
</span>
