---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/mitsu-blanco.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/trayecto.png";
import tools from "@images/tiempo.jpg";
import dashboard from "@images/seguridad.png";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <!-- <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore ScrewFast on GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  /> -->

  <HeroSection
    title=`TITIGO <span
        class="text-yellow-500 dark:text-yellow-400 sm:text-2xl">Arequipa</span>`
    subTitle="Ofrecemos transporte privado en Arequipa, con recojo en el aeropuerto, hoteles, eventos y más. Reserva tu movilidad ejecutiva hoy mismo."
    primaryBtn="+51 959 227 868"
    primaryBtnURL="https://api.whatsapp.com/send/?phone=51959227868&text=Hola+TitiGo+quisiera+cotizar&type=phone_number&app_absent=0"
    secondaryBtn="Cotizar ahora"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`Más de <span class="font-bold">3.8k</span> reseñas`
    src={heroImage}
    alt="Stack of ScrewFast product boxes containing assorted hardware tools"
  />

  <ClientsSection
    title="Con la confianza de diferentes empresas"
    subTitle="Experimente la fiabilidad elegida por los gigantes de la industria."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Nuestros Servicios"
    subTitle="Ofrecemos un servicio de transporte privado y personalizado pensado para tu comodidad y seguridad. Con capacidad máxima de 4 personas, garantizamos puntualidad, confianza y confort en cada trayecto."
    src={featureImage}
    alt="ScrewFast products in floating boxes"
    features={features}
  />

  <FeaturesNavs
    title=`Con <span class="text-yellow-500 dark:text-yellow-400">TitiGo</span> tu traslado es más que un simple viaje.`
    tabs={[
      {
        heading: "Puntualidad Garantizada",
        content:
          "Sabemos que tu tiempo es valioso. Nos comprometemos a llegar a la hora pactada, sin retrasos ni excusas. Con TitiGo puedes confiar en un servicio que cumple con lo prometido, sea cual sea tu destino.",
        svg: "clock",
        src: tools,
        alt: "Yellow and black heavy equipment on brown grass field",
        first: true,
      },
      {
        heading: "Seguridad y Confianza",
        content:
          "Contamos con conductores capacitados, amables y responsables, que priorizan tu bienestar en cada traslado. Nuestros vehículos están en óptimas condiciones y cumplen con todas las normativas de seguridad.",
        svg: "security",
        src: dashboard,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "Rutas Personalizadas",
        content:
          "Nos adapatamos a ti. Ya sea que necesites un traslado al aeropuerto, a tu hotel, o a cualquier evento especial, diseñamos la ruta que mejor se ajuste a tus necesidades y preferencias.",
        svg: "house",
        src: construction,
        alt: "Gray metal building frame near tower crane during daytime",
      },
    ]}
  />

  <TestimonialsSection
    title="Experiencia TitiGo"
    subTitle="En TitiGo, nos enfocamos en brindar un servicio de transporte privado que combina puntualidad, comodidad y seguridad."
    ;
    testimonials={[
      {
        content:
          "El servicio fue puntual, cómodo y totalmente personalizado. Sin duda, la mejor forma de trasladarnos en la ciudad.",
        author: "Yoshiro Miranda",
        role: "Gerente de operaciones | Orica.",
        avatarSrc:
          "https://media.licdn.com/dms/image/v2/C5603AQFlqh2qN8xT2A/profile-displayphoto-shrink_200_200/profile-displayphoto-shrink_200_200/0/1516627137454?e=2147483647&v=beta&t=uHgITmGa-wijX1ljYxZs1XNe_RPngvWSKk2xE730h58",
      },
    ]}
    statistics={[
      {
        count: "5k+",
        description:
          "traslados realizados con éxito en Arequipa y alrededores",
      },
      {
        count: "98%",
        description:
          "de puntualidad en cada servicio, asegurando llegadas a tiempo",
      },
      {
        count: "95%",
        description:
          "de clientes satisfechos nos recomiendan",
      },
      {
        count: "2x",
        description: "mayor puntualidad en comparación con traslados compartidos",
      },
    ]}
  />

  <!-- <PricingSection pricing={pricing} /> -->

  <FAQ title="Preguntas frecuentes" faqs={faqs} />

  <!-- <HeroSectionAlt
    title="Let's Build Together"
    subTitle="ScrewFast is an open-source template, meticulously crafted with Astro, Tailwind CSS, and Preline UI frameworks."
    url="https://github.com/mearashadowfax/ScrewFast"
  /> -->
</MainLayout>
